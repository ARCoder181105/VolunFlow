{
  "compilerOptions": {
    // --- Module & Target Settings ---
    "target": "ES2022",                      // Compile to modern, widely supported JavaScript
    "module": "NodeNext",                     // Use the modern Node.js module system
    "moduleResolution": "NodeNext",             // How the compiler finds modules, required for "NodeNext"

    // --- Project Structure ---
    "rootDir": "./src",                       // Where your TypeScript source code lives
    "outDir": "./dist",                       // Where the compiled JavaScript output will go
    "sourceMap": true,                        // Generate source maps for easier debugging

    // --- Strictness & Best Practices ---
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Allows for better compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Prevents case-sensitive path bugs
    "skipLibCheck": true  ,                   // Skip type checking of declaration files in node_modules
    "isolatedModules": true  
  },
  "include": ["./src/**/*"],                   // Specifies which files TypeScript should compile (match only files under server/src)
  "exclude": ["node_modules"],                // Specifies which files to exclude
  "ts-node": {
    "esm": true                               // Crucial for making ts-node-dev work with ES Modules
  }
}